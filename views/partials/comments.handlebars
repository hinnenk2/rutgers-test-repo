<div class="comments">
  <!-- in order to access the array we use this.
  this is being looped over so only one expression was changed -->
  {{#each this}}
  <section class="comment">
    <div class="meta">
      <!--format_date is a helper function that is receiving
      created_at as an argument-->
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>