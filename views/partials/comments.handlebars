<div class="comments">
  {{#each this}}    <!-- "this" keyword is used for accessing the array of string comments--> 
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}  <!-- Accesses helper util: format:date-->
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>